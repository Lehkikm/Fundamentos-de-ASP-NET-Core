@page "{id}"
@using laboratorio.Pages.Restaurantes

@model EditarModel

<h1>Consorcio de restaurantes</h1>
<h2>Editar: <span style="color: rgb(255, 187, 0);">@Model.Restaurante.Nombre</span></h2>


<br/>

<form method="post">
    <input type="hidden" asp-for="Restaurante.Id"/>
    
    <div class="form-group">
        <label asp-for="Restaurante.Nombre">Nombre</label>
        <input asp-for="Restaurante.Nombre"/>
        <span asp-validation-for="Restaurante.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Restaurante.Cocina">Tipo de cocina</label>
        <select asp-for="Restaurante.Cocina" asp-items="@Html.GetEnumSelectList<TipoCocina>()"> </select>
        <span asp-validation-for="Restaurante.Cocina"></span>
    </div>
        
    <input class="input-submit btn-verde" type="submit" name="guardar" value="Guardar" style="margin-left: 90px;"/>
</form>

